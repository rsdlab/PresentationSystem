extern "C"
{
 
  void FaceDetectionInit(RTC::Manager* manager)
  {
    coil::Properties profile(facedetection_spec);
    manager->registerFactory(profile,
                             RTC::Create<FaceDetection>,
                             RTC::Delete<FaceDetection>);
  }
  
};


